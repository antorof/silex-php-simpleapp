{% extends "base-out.twig" %}
{% block content %}
    <div class="container heading">
        <h2 class="">{{ titulo_cabecera }}</h2>
        {#<button id="btnActualizar" class="btn btn-sm btn-default" type="button">#}
            {#<span class="glyphicon glyphicon-refresh faa-spin"></span>&nbsp;&nbsp;Actualizar base de datos#}
        {#</button>#}
    </div>

    <form class="" action="." method="post">
    <div class="container-fluid jumbotron {{ seccion }}" style="padding: 35px">
        <h1>{{ titulo_principal|raw }}</h1>
        <p>{{ subtitulo_principal|raw }}</p>

            <div class="form-group">
                <input class="form-control" type="text" id="nombre" name="nombre" placeholder="Nombre del contacto" value="{{ keyword }}">
                {#<span class="input-group-btn">#}
                    {#<button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-search"></span></button>#}
                {#</span>#}
            </div>

    </div>
    <div class="container">
        <h3><em>{{ titulo_contenido|raw }}</em></h3>
        <div class="form-group">
          {{ contenido|raw }}
        </div>

        <div class="form-group">
            <label for="email" class="col-md-2 control-label text-right">Email</label>
            <div class="col-md-10">
                <input type="email" class="form-control" id="email" placeholder="Introcuce el email">
            </div>
        </div>
        <div class="form-group">
            <label for="telefono" class="col-md-2 control-label text-right">Email</label>
            <div class="col-md-10">
                <input type="number" class="form-control" id="telefono" placeholder="Introcuce el tel&eacute;fono">
            </div>
        </div>
    </div>
    </form>
    <script>
    $(function(){
        $( "#btnActualizar" ).click(function() {
            $( "#btnActualizar span" ).addClass('animated');
            $( "#btnActualizar" ).addClass('disabled');
            $('#miModal .modal-body p').removeClass('text-danger');
            
            $.post( "", function(data) {
              console.log( data );
              
              var texto = "La base de datos contiene ahora un total de <strong>"+data.numItems+"</strong> noticias. <br/>"
              texto += "Se han incluido <strong>"+data.nuevosItems+"</strong> nuevas noticias.";
              $('#miModal .modal-body p').html(texto);
            })
              .fail(function() {
                $('#miModal .modal-body p').html("Ha habido un problema durante la actualizaci&oacute;n.");
                $('#miModal .modal-body p').addClass('text-danger');
              })
              .always(function() {
                $('#miModal').modal();
                $( "#btnActualizar span" ).removeClass('animated');
                $( "#btnActualizar" ).removeClass('disabled');
              });
        });
    });

        function mostrarModal(title, texto, tipo, callback) {
            $('#miModal .modal-title').html(title);
            $('#miModal .modal-body p').html(texto);
            $('#miModal .modal-footer button').addClass('btn-'+tipo);
            $('#miModal').modal();

            if(callback!=undefined)
                callback();
//            $('#miModal .modal-body p').addClass('text-danger');
        }
    </script>
    
    <!-- MODAL -->
    <div id="miModal" class="modal">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h4 class="modal-title">Actualizaci&oacute;n de la base de datos</h4>
          </div>
          <div class="modal-body">
            <p></p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default_" data-dismiss="modal">Aceptar</button>
          </div>
        </div>
      </div>
    </div> <!-- /MODAL -->
{% endblock %}